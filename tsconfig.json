{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "cypress"
    ],
    "baseUrl": "./",
    "paths": {
      "@cy/*": [
        "cypress/*"
      ],
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "scripts.ts"
  ]
}
